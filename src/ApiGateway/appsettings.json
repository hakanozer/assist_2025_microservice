{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Debug"
    }
  },
  "AllowedHosts": "*",
  "Consul": {
    "Address": "http://localhost:8500",
    "ServiceName": "apigateway",
    "ServiceAddress": "host.docker.internal",
    "ServicePort": "8090"
  },
    "ReverseProxy": {
      "Clusters": {}
  },
  "Authorization": {
    "Routes": {
      "product-service": {
        "GET:/api/Product/all": ["User", "Admin"],
        "POST:/api/Product": ["Admin"],
        "DELETE:/api/Product/*": ["Admin"]
      },
      "order-service": {
        "GET:/api/Order/*": ["User", "Admin"],
        "POST:/api/Order": ["User", "Admin"],
        "DELETE:/api/Order/*": ["Admin"]
      },
      "payment-service": {
        "*": ["Admin"]
      }
    }
  }
}
